<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">


        <!-- Image View -->
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="product_image"
            android:scaleType="centerCrop" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Product Name"
            android:gravity="start|end"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Scrollable Description -->
        <TextView
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start|end"
            android:text="Product description goes here."
            android:textSize="16sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvHowToUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start|end"
            android:text="How to use : "
            android:textSize="16sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/howToUse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start|end"
            android:text="Product description goes here."
            android:textSize="16sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/tvSkinType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start|end"
            android:text="Skin Type : "
            android:textSize="16sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp"
            android:padding="8dp" />

        <TextView
            android:id="@+id/productSkinType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="start|end"
            android:text="Product description goes here."
            android:textSize="16sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp"
            android:padding="8dp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
